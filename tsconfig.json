{
	"compilerOptions": {
		"types": [ "react", "react-dom" ],
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"strict": true,
		"sourceMap": false,
		"noEmitOnError": true,
		"removeComments": true,
		"newLine": "LF"
	},
	"include": [ "./components/**/*" ],
	"compileOnSave": false
}
